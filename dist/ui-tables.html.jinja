<!doctype html>

{% extends "base.html.jinja" %}

{% block content %}
<main class="mdl-layout__content ">
  <div class="mdl-grid ui-tables">
    <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
      <div class="mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h1 class="mdl-card__title-text">Messages</h1>
        </div>
        <div class="mdl-card__supporting-text no-padding">
          <table class="mdl-data-table mdl-js-data-table">
            <thead>
              <tr>
                <th class="mdl-data-table__header">#</th>
                <th onclick="window.location.href='/ui-tables?sorts={{ params.sorts }}&index=0'" class="mdl-data-table__header--sorted-{{ params.keyss['title'] }}">Title</th>
                <th onclick="window.location.href='/ui-tables?sorts={{ params.sorts }}&index=1'" class="mdl-data-table__header--sorted-{{ params.keyss['created'] }}">Created</th>
                <th onclick="window.location.href='/ui-tables?sorts={{ params.sorts }}&index=2'" class="mdl-data-table__header--sorted-{{ params.keyss['user'] }}">User</th>
                <th  class="mdl-data-table__header"> </th>
              </tr>
            </thead>
            <tbody>
              {% for message in params.messages %}
              <tr onclick="window.location.href='/new_message'">
                <td class="mdl-data-table__cell--non-numeric">{{ message.id }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ message.title }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ message.created }}</td>
                <td class="mdl-data-table__cell--non-numeric">bleh</td>
                <td class="mdl-data-table__cell--non-numeric"><button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-teal">View</button></td>
              </tr>
              {% endfor %}

            </tbody>
          </table>
        </div>
      </div>

    </div>

  </div>
  <div class="mdl-card__supporting-text mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
    <button onclick="window.location.href='/new_message'" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored pull-left">
        <i class="material-icons">add</i>
    </button>
</div>
</main>
{% endblock %}
