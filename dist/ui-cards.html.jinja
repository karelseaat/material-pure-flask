<!doctype html>

{% extends "base.html.jinja" %}

  {% block content %}
    <main class="mdl-layout__content">
        <div class="mdl-grid ui-cards">
            <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
                <h3>Basic cards</h3>
            </div>

            {% for device in params.devices %}
            <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-col-tablet mdl-cell--2-col-phone">
                <div class="mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title">
                        <h2 class="mdl-card__title-text">{{ device.name }}</h2>
                    </div>
                    <div class="mdl-card__supporting-text mdl-card--expand">
                        <small>{{ device.mac }}</small>
                        <br>
                        <b>Created:</b> {{ device.created_at }}
                        <br>
                        <b>Local time:</b> Thursday 2:22 PM
                        <br>
                        <b>Population:</b> 8.674 million (2015)
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a onclick="window.location.href='{{ view }}{{ device.id }}'" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-orange pull-right"target="_blank">
                          View
                        </a>
                        <a onclick="window.location.href='{{ params.delete }}{{ device.id }}'" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-orange pull-left"target="_blank">
                          Delete
                        </a>

                    </div>
                    <div class="mdl-card__menu">
                        <i class="material-icons">more_vert</i>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="mdl-card__supporting-text mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
          <button onclick="window.location.href='{{ add }}'" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored pull-left">
              <i class="material-icons">add</i>
          </button>
      </div>
    </main>
    {% endblock %}
