<!doctype html>

{% extends "base.html.jinja" %}

{% block content %}
<main class="mdl-layout__content ui-form-components">

  <div class="mdl-grid mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone mdl-cell--top">

    <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
      <div class="mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          {% if form.data.id %}
          <h5 class="mdl-card__title-text text-color--white">Edit device</h5>
          {% else %}
          <h5 class="mdl-card__title-text text-color--white">New device</h5>
          {% endif %}
        </div>
        <div class="mdl-card__supporting-text">
          <form class="form form--basic" action="{{ submit }}" method="post">
            <div class="mdl-grid">
              <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone form__article">
                {{ form.id(type="hidden") }}
                <div class="mdl-textfield mdl-js-textfield full-size">
                  {{ form.name(class_="mdl-textfield__input") }}
                  {{ form.name.label(class_="mdl-textfield__label") }}
                </div>
                <div class="mdl-textfield mdl-js-textfield full-size">
                  {{ form.mac(class_="mdl-textfield__input") }}
                  {{ form.mac.label(class_="mdl-textfield__label") }}
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="mdl-card__supporting-text mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
      <button onclick="document.querySelector('form').submit();" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-green">
        Save
      </button>
      <a href='{{ cancel }}' class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button--colored-red">
      Cancel
      </a>

    </div>

</main>
{% endblock %}
